                    </svg>
                    {% if comments %}
                        <p id="nbcmt">{{comments|length}} commentaires</p>
                    {% endif %}
                </div>

                
                {% if comments %}
                    {% for comment in comments %}
                    <div class="createdcmt">
                    {% if comments|length != 1 %}
                        <p id="whocreated">Redige par {{comment.user.username}}, le {{comment.createat ? comment.createat|date('Y-m-d H:i:s') : ''}}</p>
                        <p>{{comment.text}}</p>
                    {% else %}
                        {#<div class="flex flex-col items-center gap-8">#}
                            {#{{ form_widget(form.text) }}#}
                            {#{{ form_widget(form.save) }}#}
                        {#</div>#}
                    {% endif %}
                    </div>
                    {% endfor %}
                {% endif %}
            
            </div>
            
        </div>
    </div>