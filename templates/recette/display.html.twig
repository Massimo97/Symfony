<div class="home-container-down">

        <div class="home-right">

            <div class="info-details">
                <span class="iconify" data-icon="clarity:avatar-solid"></span>
                <span class="iconify" data-icon="bi:dot"></span>
                <p>{{post.createat ? post.createat|date('Y-m-d') : ''}}</p>
                <span class="iconify" data-icon="bi:dot"></span>
                <p>Plat</p>
            </div>

            <h2>{{post.title}}</h2>

            <p>{{post.text}}</p>

            <img id="recettedetailimg" src="{{ asset(post.image.src) }}">
            {#<img id="recettedetailimg" src="{{ asset('images/pasta.jpg') }}" alt="">#}

            <p id="text-long">{{post.text}}</p>

            <hr>

            <div class="comment-infos">
                
                <div class="comment-box">
                    <svg id="message" class="svg-icon" viewBox="0 0 20 20">
